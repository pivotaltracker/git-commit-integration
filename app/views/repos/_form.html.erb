<%= form_for(@repo) do |f| %>
  <% if @repo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@repo.errors.count, "error") %> prohibited this repo from being saved:</h2>

      <ul>
        <% @repo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_area :url %>
    NOTE: This is the git repository url ending in '.git', NOT the url to the github web page for the repo.
  </div>
  <% unless @repo.new_record? %>
    <div class="field">
      <%= f.label :github_identifier %><br>
      <%= f.text_area :github_identifier %>
    </div>
    <div class="field">
      <%= f.label :hook %><br>
      <%= f.text_area :hook %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
